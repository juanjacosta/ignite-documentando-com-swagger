{
  "openapi": "3.0.0",
  "info": {
    "title": "Documentação desafio Ignite NodeJs",
    "description": "Essa é a documentação do projeto Introdução ao solid",
    "version": "1.0.0",
    "contact": {
      "email": "juan_jg@hotmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Cria um novo usuário",
        "requestBody": {
          "required": true,
          "description": "Campos obrigatórios para criação de um usuário",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "johndoe@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updaetd_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "d0c21ec2-a727-4dcc-93f6-e10cd8c9390e",
                    "admin": false,
                    "name": "John Doe",
                    "email": "johndoe@email.com",
                    "created_at": "2023-05-27T03:51:54.825Z",
                    "updated_at": "2023-05-27T03:51:54.825Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já está sendo utilizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User email already exists"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Retorna todos os usuários",
        "description": "Somente usuário admin pode acessar",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "description": "user_id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updaetd_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": "2568760f-a069-4c3d-b5bd-a144972c74c6",
                      "admin": false,
                      "name": "John Doe",
                      "email": "john.doe@email.com",
                      "created_at": "2023-05-30T11:35:35.847Z",
                      "updated_at": "2023-05-30T11:35:35.847Z"
                    },
                    {
                      "id": "91b92ed5-8063-43bc-89e3-1d348d828100",
                      "admin": true,
                      "name": "rocketseat",
                      "email": "rocketseat@email.com",
                      "created_at": "2023-05-30T11:36:03.877Z",
                      "updated_at": "2023-05-30T11:36:29.022Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User is not an administrator"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Retorna um usuário específico",
        "description": "Retorna um usuário específico",
        "parameters": {
          "- in": "path",
          "name": "user_id",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "minimum": 1,
          "description": "Parameter description in Markdown"
        },
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Torna admin um usuário",
        "description": "Torna admin um usuário",
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado"
          }
        }
      }
    }
  }
}
